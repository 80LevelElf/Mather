<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Styles/Main.css")" type="text/css" rel="stylesheet"/>
    
    <script src="@Url.Content("~/Scripts/Libraries/cookies.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Libraries/jquery-1.5.1.min.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/Mather/Settings.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Mather/Elements/ChooseElement.js")" type="text/javascript"></script>
</head>
    <body>
        <div class="header">
            <a class="logo" href="@Url.Action("Index", "Home")">MATHER</a>
            <ul class="right-menu">
                <li>
                    <img src="@Url.Content("~/Content/Images/Settings.png")" alt="Settings"/>
                    <div class="right-menu-panel settings-panel">
                        <table>
                            <tr>
                                <td>Angle type: </td>
                                <td>
                                    <div class="choose-element">
                                              <button class="left">rad</button>
                                              <button>deg</button>
                                              <button>grad</button>
                                              <button class="right">cycle</button>
                                     </div>
                                </td>
                            </tr>
                        </table>

                    </div>
                </li>
                <li>
                    <img src="@Url.Content("~/Content/Images/More.png")" alt="More"/>
                    <div class="right-menu-panel more-panel">
                        <a href="@Url.Action("About", "Home")">About MATHER</a>
                    </div>
                </li>
            </ul>
                
        </div>
        <div class="main-div">
            @RenderBody()
        </div>
        <div class="footer">
            @{
                //Calc date
                var currentYear = DateTime.Now.Year;
                string dateText;

                if (currentYear == 2014)
                {
                    dateText = "2014";
                }
                else
                {
                    dateText = "2014 - " + currentYear;
                }
            }
            <label>Rustam Salakhutdinov &copy; @dateText</label>
        </div>
    </body>
</html>